{
  "name": "books",
  "version": "1.0.0",
  "description": "Manage your books more easily",
  "main": "index.js",
  "dependencies": {
    "axios": "^0.18.0",
    "express": "^4.16.3",
    "json-server": "^0.14.0",
    "nodemon": "^1.17.5"
  },
  "devDependencies": {
    "concurrently": "^3.6.0"
  },
  "scripts": {
    "install": "cd client && yarn install",
    "client": "cd client && yarn start",
    "server": "nodemon server.js",
    "json:server": "cd db && json-server --watch db.json --port 3004 --routes routes.json",
    "dev": "concurrently --kill-others-on-fail \"yarn json:server\" \"yarn server\" \"yarn client\"",
    "build:prod": "cd client && yarn build",
    "prod": "concurrently --kill-others-on-fail \"yarn json:server\" \"yarn server\""
  },
  "author": "Marcel Cruz",
  "license": "MIT"
}
