{
  "name": "books",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "dependencies": {
    "axios": "^0.18.0",
    "express": "^4.16.3",
    "json-server": "^0.14.0",
    "nodemon": "^1.17.5"
  },
  "devDependencies": {
    "concurrently": "^3.6.0"
  },
  "scripts": {
    "install": "cd client && yarn install",
    "client:dev": "cd client && yarn start",
    "client:prod": "cd client && yarn && yarn run build",
    "server": "nodemon server.js",
    "json:server": "cd db && json-server --watch db.json --port 3004 --routes routes.json",
    "dev": "concurrently --kill-others-on-fail \"yarn json:server\" \"yarn server\" \"yarn client:dev\"",
    "prod": "concurrently --kill-others-on-fail \"yarn json:server\" \"yarn server\" \"yarn client:prod\"",
    "start": "concurrently --kill-others-on-fail \"yarn json:server\" \"yarn server\"",
    "heroku-postbuild": "cd client && yarn && yarn run build"
  },
